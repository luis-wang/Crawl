{
	"name" : "Crawl",
	"description" : "Easy webcrawler chrome extension.",
	"version" : "0.0.1",
	"manifest_version" : 2,

	"icons" : {
		"48" : "icon_48.png",
		"128" : "icon_128.png"
	},

	"background" :{
		"scripts" : ["background.js"]
	},
	"content_scripts": [
	{
		"matches": ["http://*/*", "https://*/*"],
      		"js": ["jquery.min.js","content.js"],
      		"run_at": "document_end"
	}      
	],
	"browser_action" : {
		"default_title" : "Crawl",
		"default_popup" : "popup.html",
		"default_icon" : "icon_48.png"
	},

	"permissions" : [
		"background",
		"tabs",
		"http://*/*",
		"https://*/*",
		"tts"
	]

}